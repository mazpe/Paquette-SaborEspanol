<script language="JavaScript">
function submitForm()
{
    document.recalculate.submit();
}
</script>
<form method="post" name="recalculate" action="[% c.uri_for(
    c.controller('Cart').action_for('update')
)  %]">

<table width="500">
<thead>
  <tr>
    <th scope="col">SKU</th>
    <th scope="col">Product Name</th>
    <th scope="col" align="center">Quantity</th>
    <th scope="col" align="center">Price</th>
    <th scope="col" align="center">Total</th>
  </tr>
</thead>
<tbody>
[% total = 0 %]
[% FOREACH item IN cart_items %]
[% subtotal = item.quantity * item.product.price %]
[% total = total + subtotal %]
  <tr>
    <td>[% item.sku %]</td>
    <td>[% item.product.name %]</td>
    <td align="center">[% item.quantity %]</td>
    <td align="right">$[% item.product.price %]</td>
    <td align="right">$[% subtotal %]</td>
  </tr>
[% END %]
</tbody>
<tfoot>
    <td></td>
    <td></td>
    <td></td>
    <td>SUBTOTAL</td>
    <td align="right">$[% total %]</td>
</tfoor>
</table>
</form>
